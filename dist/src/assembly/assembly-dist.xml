<?xml version="1.0" encoding="UTF-8"?>
<!-- Maven Assembly descriptor used for distribution -->
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<moduleSets>
		<moduleSet>
			<excludes>
				<exclude>gwimon</exclude>
			</excludes>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includeSubModules>true</includeSubModules>
<!--
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<includes>
							<include>src/main/**</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
			-->
			<binaries>
				<outputDirectory>lib</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib/deps</outputDirectory>
						<excludes>
							<exclude>org.javasimon:*</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory></outputDirectory>
			<outputFileNameMapping>javasimon-all-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>org.javasimon:javasimon-parent:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/deps</outputDirectory>
			<excludes>
				<exclude>org.javasimon:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>