<?xml version="1.0" encoding="UTF-8"?>
<!-- Maven Assembly descriptor used for distribution -->
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includeSubModules>true</includeSubModules>
			<!-- Sources are included below as a Jar file
			<sources>
				< ! - - source files - - >
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<includes>
							<include>src/main/**</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
			-->
			<binaries>
				<!-- binary Jar and dependencies -->
				<outputDirectory>lib</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib/deps</outputDirectory>
						<excludes>
							<exclude>org.javasimon:*</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<!-- readme.txt and license.txt -->
			<outputDirectory></outputDirectory>
			<directory>..</directory>
			<includes>
				<include>*.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<!-- javadoc.jar and sources.jar -->
			<outputDirectory></outputDirectory>
			<directory>../target</directory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>